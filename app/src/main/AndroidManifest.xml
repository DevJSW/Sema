<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sema.sema">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Sema"
            android:icon="@drawable/splash2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignupActivity"
            android:label="Signup" />
        <activity
            android:name=".EditProfileActivity"
            android:label="Edit" />
        <activity android:name=".SettingsActivity" />
        <activity
            android:name=".ChatroomActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SendPhotoActivity"
            android:label="Send photo"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".CreateHashtagActivity"
            android:label="Create hashtag" />
        <activity
            android:name=".FriendsActivity"
            android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HashChatroomActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HashSendPhotoActivity"
            android:label="Send photo"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity android:name=".DiscoverHashtagActivity"></activity>
    </application>

</manifest>