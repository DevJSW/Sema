        <activity
            android:name=".ChatroomActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SendPhotoActivity"
            android:label="Send photo"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".CreateHashtagActivity"
            android:label="Create hashtag" />
        <activity
            android:name=".FriendsActivity"
            android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HashChatroomActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HashSendPhotoActivity"
            android:label="Send photo"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".DiscoverHashtagActivity"
            android:label="Hashtags" />
        <activity
            android:name=".SelectInterestActivity"
            android:label=""
