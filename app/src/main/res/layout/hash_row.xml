<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:id="@+id/liny"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/user_image"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#fff"
                android:layout_marginRight="5dp"
                android:id="@+id/post_image"
                android:src="@drawable/placeholder_image"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ley"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingTop="1dp"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="12dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/post_name" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_lay"
                            android:background="@drawable/shape_bg_incoming_bubble"
                            android:layout_marginLeft="2dp"
                            android:layout_toLeftOf="@+id/counter"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Message"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/post_message"
                                android:textSize="13dp"
                                android:padding="4dp"
                                android:paddingTop="2dp"
                                android:layout_marginRight="5dp"
                                android:textStyle="bold" />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="date"
                                android:layout_marginRight="15dp"
                                android:textSize="11dp"
                                android:layout_marginBottom="3dp"
                                android:layout_gravity="right"
                                android:id="@+id/post_date" />

                       </LinearLayout>

                    <RelativeLayout
                        android:layout_width="23dp"
                        android:layout_height="20dp"
                        android:id="@+id/counter"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/heart_grey">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textSize="10dp"
                            android:layout_centerInParent="true"
                            android:textColor="#fff"
                            android:id="@+id/unreadCounter"
                            android:lines="1"/>



                    </RelativeLayout>

                </RelativeLayout>
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:id="@+id/post_photo"
                    android:scaleType="fitXY"
                    android:background="@drawable/shape_bg_incoming_bubble"
                    android:visibility="gone"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="left"
                    android:src="@drawable/placeholder_image"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rely"
       android:layout_marginBottom="15dp"
       android:visibility="gone"
       android:layout_margin="5dp">

       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_width="35dp"
           android:layout_height="35dp"
           app:civ_border_width="1dp"
           android:layout_margin="10dp"
           android:layout_alignParentRight="true"
           app:civ_border_color="#fff"
           android:id="@+id/post_image2"
           android:src="@drawable/placeholder_image"/>



       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/chat_balloon"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="20dp"
           android:layout_toLeftOf="@+id/post_image2"
           android:background="@drawable/bg_send_bubble"
           android:layout_below="@+id/post_name2">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="Message"
               android:layout_marginLeft="17dp"
               android:id="@+id/post_message2"
               android:textSize="14dp"
               android:padding="4dp"
               android:paddingTop="2dp"
               android:layout_marginRight="9dp"
               android:textStyle="bold" />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/post_message2"
               android:layout_marginBottom="3dp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="25dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="date"
                   android:paddingTop="1dp"
                   android:layout_marginRight="5dp"
                   android:layout_gravity="right"
                   android:id="@+id/post_date2" />

           </LinearLayout>
       </RelativeLayout>

       <ImageView
           android:layout_width="250dp"
           android:layout_height="150dp"
           android:id="@+id/post_photo2"
           android:scaleType="fitXY"
           android:background="@drawable/bg_send_bubble"
           android:visibility="gone"
           android:layout_below="@+id/chat_balloon"
           android:layout_marginRight="50dp"
           android:paddingLeft="5dp"
           android:paddingRight="17dp"
           android:paddingTop="10dp"
           android:layout_marginTop="2dp"
           android:paddingBottom="8dp"
           android:layout_marginLeft="15dp"
           android:layout_alignParentRight="true"
           android:src="@drawable/placeholder_image"/>


   </RelativeLayout>

</LinearLayout>