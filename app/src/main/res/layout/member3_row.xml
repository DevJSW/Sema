<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rely_img"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/post_image"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#fff"
                    android:src="@drawable/placeholder_image"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_name2"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rely_img"
            android:orientation="horizontal">

            <com.sema.sema.fonts.CustonFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_name"
                android:layout_toRightOf="@+id/rely_img"
                android:textSize="13dp"
                android:scaleType="fitXY"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="username"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:id="@+id/relly"
            android:layout_toRightOf="@+id/rely_img"
            android:layout_below="@+id/post_name2"
            android:orientation="horizontal">

            <com.sema.sema.fonts.CustonFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/counter"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:id="@+id/post_message"
                android:text="Message"/>


            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:id="@+id/counter"
                android:layout_marginTop="1dp"
                android:background="@drawable/card"
                android:layout_marginRight="10dp">

                <com.sema.sema.fonts.CustonFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textSize="11dp"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:id="@+id/unreadCounter"
                    android:lines="1"/>



            </RelativeLayout>


        </RelativeLayout>

        <com.sema.sema.fonts.CustonFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_date"
            android:textSize="9dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="date"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/rely_img"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:background="#cecccc"/>
    </RelativeLayout>


</LinearLayout>

