<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:visibility="gone"
        android:id="@+id/liny"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:orientation="vertical">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_lay"
                    android:layout_marginRight="55dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">


                    <com.sema.sema.CustonFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Message"
                        android:background="@drawable/shape_bg_incoming_bubble"
                        android:id="@+id/post_message"
                        android:textSize="14dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="30dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="3dp"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold" />



                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="date"
                        android:textSize="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="left"
                        android:id="@+id/post_date" />

               </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_balloon"
                android:layout_marginBottom="10dp"
                android:id="@+id/chat_image"
                android:visibility="gone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/shape_bg_incoming_bubble"
                android:paddingTop="5dp"
                android:layout_marginTop="2dp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <com.sema.sema.CustonFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="14dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="35dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/captionInput"
                    android:text="caption"/>

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:id="@+id/post_photo"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder_image"/>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rely"
       android:layout_alignParentRight="true"
       android:layout_gravity="right"
       android:visibility="gone">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/chat_balloon"
           android:layout_alignParentRight="true"
           android:layout_marginLeft="55dp"
           android:layout_below="@+id/post_name2">

           <com.sema.sema.CustonFont
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:text="Message"
               android:layout_alignParentRight="true"
               android:background="@drawable/bg_send_bubble"
               android:layout_marginLeft="13dp"
               android:id="@+id/post_message2"
               android:textSize="14dp"
               android:paddingLeft="10dp"
               android:paddingRight="35dp"
               android:paddingBottom="10dp"
               android:paddingTop="3dp"
               android:textStyle="bold" />

          <ImageView
              android:layout_width="15dp"
              android:layout_height="20dp"
              android:layout_alignBottom="@id/post_message2"
              android:layout_alignRight="@id/post_message2"
              android:paddingTop="6dp"
              android:id="@+id/single_tick"
              android:layout_marginRight="17dp"
              android:src="@drawable/ic_done_white"/>

           <ImageView
               android:layout_width="15dp"
               android:layout_height="20dp"
               android:layout_alignBottom="@id/post_message2"
               android:layout_alignRight="@id/post_message2"
               android:paddingTop="6dp"
               android:id="@+id/double_tick"
               android:layout_marginRight="17dp"
               android:src="@drawable/ic_done_all_white"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/post_message2"
               android:layout_marginBottom="3dp"
               android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"
               android:orientation="horizontal">

               <com.github.curioustechizen.ago.RelativeTimeTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="date"
                   android:textSize="10dp"
                   android:paddingTop="1dp"
                   android:layout_marginBottom="3dp"
                   android:layout_gravity="right"
                   android:id="@+id/post_date2" />

           </LinearLayout>


       </RelativeLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/chat_balloon"
           android:id="@+id/chat_image2"
           android:visibility="gone"
           android:paddingLeft="5dp"
           android:paddingRight="17dp"
           android:background="@drawable/bg_send_bubble"
           android:paddingTop="5dp"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="2dp"
           android:paddingBottom="8dp"
           android:layout_marginLeft="15dp"
           android:layout_alignParentRight="true"
           android:orientation="vertical">

           <com.sema.sema.CustonFont
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:textSize="14dp"
               android:paddingLeft="10dp"
               android:paddingRight="35dp"
               android:paddingBottom="5dp"
               android:id="@+id/captionInput2"
               android:text="caption"/>

           <ImageView
               android:layout_width="250dp"
               android:layout_height="200dp"
               android:id="@+id/post_photo2"
               android:scaleType="fitXY"
               android:src="@drawable/placeholder_image"/>

       </LinearLayout>


   </RelativeLayout>

</LinearLayout>